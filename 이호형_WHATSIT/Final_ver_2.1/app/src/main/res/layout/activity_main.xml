        android:layout_weight="90"
        android:orientation="horizontal"
        android:weightSum="480" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:weightSum="480" >

